{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "tsc_dist/",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "~/*": ["src/*"]
    },
    "plugins": [],
    "types": [
      "node",
      "jest",
      "greasemonkey",
      "tampermonkey",
    ]
  },
  "include": [
    "src",
    "test",
    "build/devClient.ts",
  ],
}
